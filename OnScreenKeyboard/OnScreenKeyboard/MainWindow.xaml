<Window x:Class="OnScreenKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zachary Shelhamer Truefit Solutions On Screen Keyboard. zshelhamer@gmail.com" Height="768" Width="1366" Left="0" Top="0">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True">
            <TextBlock Name="outputTextBlock" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18"/>
        </ScrollViewer>
        <Button  Name="onScreenKeyboardButton" Width="500" Height="300" Content="Click Here to Begin On Screen Keyboard" FontSize="24" Click="onScreenKeyboardButton_Click"/>
    </Grid>
</Window>
